{
    "name": "clothing-store-backend",
    "version": "1.0.0",
    "description": "Backend API for clothing store billing system",
    "main": "dist/index.js",
    "scripts": {
        "dev": "nodemon -r tsconfig-paths/register src/index.ts",
        "build": "tsc && tsc-alias -p tsconfig.json",
        "start": "node dist/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
        "db:reset": "prisma migrate reset --force && npm run db:seed"
    },
    "dependencies": {
        "@prisma/client": "^5.7.1",
        "@types/pdfkit": "^0.17.3",
        "axios": "^1.6.2",
        "bcryptjs": "^2.4.3",
        "bwip-js": "^4.2.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "csv-parser": "^3.0.0",
        "csv-writer": "^1.6.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "html2canvas": "^1.4.1",
        "jsonwebtoken": "^9.0.2",
        "jspdf": "^2.5.1",
        "module-alias": "^2.2.3",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.6.5",
        "nodemailer": "^7.0.6",
        "pdfkit": "^0.17.2",
        "prisma": "^5.7.1",
        "qrcode": "^1.5.3",
        "reflect-metadata": "^0.1.13",
        "sharp": "^0.33.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.8",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.4",
        "@types/nodemailer": "^7.0.2",
        "@types/qrcode": "^1.5.5",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "eslint": "^8.54.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=24.0.0"
    },
    "prisma": {
        "seed": "ts-node -r tsconfig-paths/register prisma/seed.ts"
    }
}
